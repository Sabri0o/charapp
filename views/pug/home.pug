html
  head
    title FCC Advanced Node and Express
    link(rel='stylesheet', href='/public/style.css')
  body
    h1.border.center FCC Advanced Node and Express Chat app Project
    h2.border.center Home page
    p=message_1
    p#pug-variable=message_2

    if showlogin 
    hr
    h2 Login Form
    form(action='/login', method='post')
      div
        label Username:
        input(type='text', name='username')
      div
        label Password:
        input(type='password', name='password')
      div
        input(type='submit', value='Log In')
    hr
    if showRegisterForm
    h2 Register Form 
    form(action='/register',method='post')
      div 
        label Username: 
        input(text='text',name='username')
      div
        label Password:
        input(type='password', name='password')
      div
        input(type='submit', value='Register')